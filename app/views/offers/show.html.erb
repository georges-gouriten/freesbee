<div class="content">
  <h2><%= @offer.title %></h2>
  <%= image_tag @offer.photo.wide_thumb, :class => "offer-image" %>
  <div class="description">
    <%= @offer.description %>
  </div>
  <div class="category <%= @offer.category.css_name %> active">
    <%= @offer.category.name %>
  </div>
  
  <div class="published-date">
    <span class="label">Published:</span>
    <span class="date"><%= @offer.updated_at.strftime("%d %B %Y") %></span>
  </div>

  <a class="num-bids" href=""><span>number of Bids: </span><%= @offer.bids.count %></a>
  <% if (@offer.user != current_user) %>
    <%= link_to 'Bid', "#new_bid_form", :class =>'bid-button','data-controls-modal' => 'new_bid_form', 'data-backdrop' => 'static'%>
  <% else %>
    <%# do we want to write anything for the user if this is their item? %>
  <% end %>
</div>

  <% if (@offer.user == current_user) %>
    <%= render "offer_details" %>
  <% end %>






