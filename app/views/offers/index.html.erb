<div id="available-freesbees">
  <% if @offers.length > 0 %>
    <div class="offers-listing">
      <% @offers.each_with_index do |offer, index| %>
        <% if index.even? %>
          <div class="col">
            <%= link_to image_tag(offer.photo.thumb.url, :class => "square-thumb #{offer.category.css_name}"), offer %>
        <% else %>
            <%= link_to image_tag(offer.photo.thumb.url, :class => "square-thumb #{offer.category.css_name}"), offer %>
          </div><!-- .col -->
        <% end %>
      <% end %>
      
      <% if @offers.length.odd? %>
        </div><!-- .col -->
      <% end %>
      
    </div><!-- .offers-listing -->
  <% end %>

</div><!-- #available-freesbees -->

<%= render :partial => "partials/refine" %>