<div id="session-info" class="clearfix">
  <ul>
    <% if user_signed_in? %>
      <li>
        Logged in as <%= link_to current_user.name, current_user %>
      </li>
      <li>
        <%= link_to('Sign out', signout_path, :class => 'sign-out-button') %>
      </li>
    <% else %>
      <li>
        <%= link_to('Sign in', signin_path, :class => 'sign-in-button' )%>
      </li>
    <% end %>
  </ul>
</div>
